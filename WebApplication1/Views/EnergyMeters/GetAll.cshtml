@model List<WebApplication1.Entities.EnergyMeter>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">SerialId</th>
            <th scope="col">Type</th>
            <th scope="col">Meters</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {

        <tr>
            <th scope="row">@i</th>
            <td>@Model[i].SerialId</td>
            <td>@Model[i].Type.ToString()</td>

            @if (Model[i].Meters != null)
                foreach (var item in Model[i].Meters)
                {
                    <td>@item.MeterId</td>
                }
            <td>@await Html.PartialAsync("Delete.cshtml", Model[i])</td>
            <td>@Html.ActionLink("Update", "Update", "EnergyMeters",null, new { @class = "btn btn-primary" })</td>
        </tr>
        }
    </tbody>
</table>
    </div>